nav 
  display flex
  justify-content space-around
  align-items center
  a 
    font-family 'Raleway', sans-serif
    margin 10px 0
    font-weight 700
    color rgba(265,265,265, 0.7)
    &:hover 
      color white
      text-decoration none
  i 
    color white
    opacity 0.9
    margin-right 6px
    font-size 12px  
    &:hover 
      color rgba(265, 265, 265, 1)
  &:last-child 
    margin-right 20px
  .menu-items 
    @media mq-sm
      display none
    @media mq-xs
      display none

    

