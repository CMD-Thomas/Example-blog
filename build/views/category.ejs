<%- include head %>
<%- include header %>
<body>
<section class="category__header" style="background: url(http://lorempixel.com/1000/200/<%=posts[0].category.toLowerCase()%>);">
    <h1><%=posts[0].category%></h1>
</section>
<%for (i= 0; i < posts.length; i++){ %>
<%  var str = posts[i].title;
var newstr = str.replace(/ /ig, '-').replace(/\?/ig, '-'); %>
    <section class="category__articles container">
        <div class="row">
            <div class="col-sm-12 col-md-8 col-lg-8 col-md-offset-2 col-lg-offset-2">
                <article>
                    <a href="<%=req.baseUrl%>/<%=posts[i].category%>/<%-newstr%>/<%=posts[i].id%>"><%=posts[i].title%></a>
                    <span class="article__information">
                        <img src="../img/icon-source.png"><span><%=posts[i].created_by%></span><img src="../img/icon-time.png"><span><%=posts[i].created_at%></span>
                    </span>
                    <hr>
                </article>
            </div>
        </div>
    </section>
<%};%>
<%- include footer%>