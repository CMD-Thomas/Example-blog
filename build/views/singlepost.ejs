<%- include head %>
<%- include header %>
    <body class="singlepost">
        <div id="fb-root"></div>
        <script>(function(d, s, id) {
          var js, fjs = d.getElementsByTagName(s)[0];
          if (d.getElementById(id)) return;
          js = d.createElement(s); js.id = id;
          js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.5";
          fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));</script>
        <div class="wrapper">
            <section class="article__header" style="background: url(http://lorempixel.com/400/200/<%=posts[0].category.toLowerCase()%>); background-size: cover; ">
                <div class="container">
                    <div class="row">
                        <div class="col-sm-12 col-md-8 col-lg-8 col-md-offset-2 col-lg-offset-2">
                            <h1><%= posts[0].title%></h1>
                        </div>
                    </div>
                </div>
            </section>
            <div class="container">
                <div class="row">
                    <div class="col-sm-12 col-md-8 col-lg-8 col-md-offset-2 col-lg-offset-2 article__content">
                        <span class="article__information">
                            <img src="/img/icon-source.png"><%=posts[0].created_by%><span class="pull-right">In: <a href="/category/<%=posts[0].category%>"><%=posts[0].category%></a></span>
                        </span>
                        <%- posts[0].post%>
                        <div class="fb-like" data-href="http://<%-fullUrl%>" data-width="300px" data-layout="standard" data-action="like" data-show-faces="true" data-share="true"></div>

                        <div class="fb-comments" data-href="http:<%=fullUrl%>" data-numposts="5"></div>
                    </div>
                </div>
            </div>
        </div>
<%- include footer %>

